<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050B10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TITLE -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EAGLE EYE"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#00FFAA"
            android:gravity="center"
            android:letterSpacing="0.2" />

        <!-- RISK SCORE -->
        <TextView
            android:id="@+id/txtRiskScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:gravity="center"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/txtMicStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IDLE"
            android:textColor="#66FFCC"
            android:gravity="center"
            android:paddingBottom="12dp" />

        <!-- ACTION BUTTONS -->
        <Button
            android:id="@+id/btnScanPerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN PERMISSIONS"
            android:textColor="#00FFAA"
            android:backgroundTint="#102020" />

        <Button
            android:id="@+id/btnScanDup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCAN DUPLICATES"
            android:textColor="#00FFAA"
            android:backgroundTint="#102020"
            android:layout_marginTop="8dp" />

        <!-- DUPLICATE COUNT -->
        <TextView
            android:id="@+id/txtDupCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:paddingTop="8dp" />

        <!-- LOG / HUD PANEL -->
        <TextView
            android:id="@+id/txtRiskListHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awaiting scanâ€¦"
            android:textColor="#66FF66"
            android:textSize="14sp"
            android:paddingTop="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="monospace"
            android:background="@drawable/panel" />

    </LinearLayout>
</ScrollView>
